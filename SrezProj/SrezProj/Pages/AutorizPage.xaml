<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SrezProj.Pages.AutorizPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Label Text="Авторизация" FontSize="Medium" HorizontalOptions="Center" VerticalOptions="Start"/>
            <StackLayout  HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                <Entry x:Name="entr_log" Placeholder="Login"/>
                <Entry x:Name="entr_pass" IsPassword="True" Placeholder="Password"/>
                <Label x:Name="reg_lbl" Text="Нет аккаунта? Ну так заведите!">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>
                <Button x:Name="enter_btn" Text="Войти" Clicked="enter_btn_Clicked"/>
            </StackLayout>
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>