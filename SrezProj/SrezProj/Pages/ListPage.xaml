<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SrezProj.Pages.ListPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Какие-то штуки" FontSize="Medium" VerticalOptions="Start" HorizontalOptions="Center" />
            <Button x:Name="test" Text="Тестовое открытие страницы" Clicked="test_Clicked"/>
            <ListView  ItemTapped="ListView_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="Штука"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="Add_btn" Text="Добавление" Clicked="Add_btn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>